<div class="container">
      <div class="row">
         <div class="col-md-4">
         	<div class="image_size">
         		<% if @user.avatar.present? %>
                  <%= image_tag @user.avatar %>
         		<% else %>
         			<% if @user.gender == 0 %>
                     <%= image_tag "female.png" %>
                  <% else %>
                     <%= image_tag "male.png" %>
                  <% end %>
         		<% end %>
         	</div>
         </div>
         <div class="col-md-4">
         	  <br />
            <label>Email:  <%= @user.email %></label>
            <br>
            <label>User Name:  <%= @user.name %></label>
            <br>
            <label>Gender:  
               <% if @user.gender == 0 %>
                  Female
               <% else %>
                  Male
               <% end %>
            </label>
            <br>
            <% if user_signed_in? && (@user.id == current_user.id) %>
               <%= link_to "Change profile", edit_user_registration_path, class: "btn btn-primary" %>
            <% end %>
            <br>
         </div>
      </div>
      <div class="col-xs-12 col-md-12">
        <h4 class=" page-header">My list animal</h4>
    </div>
      <div class="row">
         <% @user.images.each do |image| %>
            <div class="col-xs-6 col-md-3">
                <div class="thumbnail">
                    <%= link_to image_path(image.id),  class: "", title: image.title do %>
                    <%= image_tag(image.file, class: 'img-responsive') %>
                    <% end %>
                    <div class="caption center">
                        <label class=""><%= image.title %></label>
                        <div><%= image.description %></div>
                    </div>
                </div>
            </div>
         <% end %>
      </div>
</div>
