<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row page-header">
        <div class="col-md-4 col-xs-4">
            <%= image_tag @animal.avatar, class: 'img-responsive img-rounded' %>
        </div>
        <div class="col-md-8 col-xs-8 ">
            <h4><strong><%= @animal.name %> </strong></h4>
            <%= link_to 'Edit', edit_animal_path(@animal) %> |
            <%= link_to 'Back', animals_path %>
        </div>
        <br/>
    </div>
    <div class="row">
        <% @images.each do |img| %> 
        
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail">
                <%= link_to image_path(img.id),  class: "", title: img.title do %>
                <%= image_tag(img.file, class: 'img-responsive') %>
                <% end %>
                <div class="caption center">
                    <label class=""><%= img.title %></label>
                    <div><%= img.description %></div>
                </div>
            </div>
        </div>
        
        <% end %>
    </div>
    </p>
</div>