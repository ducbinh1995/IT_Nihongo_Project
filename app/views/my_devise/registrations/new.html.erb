<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Sign Up</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Enter your Username" %>
          </div>

          <div class="field">
            <%= f.email_field :email, autofocus: false, class: "form-control", placeholder: "Enter your email" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter your password (6 characters minimum)" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Enter confirm password" %>
          </div>

          <div>
            <%= f.select :gender, "<option value=0>Female</option><option value=1>Male</option></select>".html_safe, {include_blank: "Gender"}, {class: "form-control"} %>
          </div>

          <div class="actions">
            <%= f.submit "Create new account", class: "btn btn-success" %>
            <%= link_to "Sign In", new_session_path(resource_name), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
